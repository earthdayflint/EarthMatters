<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp"
    android:id="@+id/boothCardView"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scheduleCardNameTextView"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/sub_event_name"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:elevation="1dp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:id="@+id/scheduleCardDateTextView"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_width="195dp"
                android:layout_height="30dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:text="#1"
                android:paddingBottom="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:elevation="1dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scheduleCardEndTimeTextView"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:text="#2"
                android:paddingBottom="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:elevation="1dp"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:id="@+id/scheduleDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sub_event_description"
            android:textSize="14sp"
            android:textColor="#000"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:elevation="1dp"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>
